<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_click_image"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <RatingBar
            android:id="@+id/randomratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:numStars="5" />

        <ImageView
            android:id="@+id/imageViewMeal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/shapebutton"/>

        <TextView
            android:id="@+id/textViewاسم"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryLight"
            android:background="@drawable/shapebutton"
            android:padding="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="right"
            />

        <TextView
            android:id="@+id/textView2خطوات"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryLight"
            android:background="@drawable/shapebutton"
            android:padding="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="right"/>

        <TextView
            android:id="@+id/textViewوصف"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryLight"
            android:background="@drawable/shapebutton"
            android:padding="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="right"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonUploadbreakfastData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/shapebutton"
                android:text="breakfast" />

            <Button
                android:id="@+id/buttonUploadLaunchData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/shapebutton"
                android:text="Launch" />


            <Button
                android:id="@+id/buttonUploadDinnerData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/shapebutton"
                android:text="Dinner" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>